<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msaranu.tripney.fragments.AddTripFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTripBckgrndImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher" />


        <EditText
            android:id="@+id/etTripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivTripBckgrndImage"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="March 6 "
            android:textSize="20sp" />


        <EditText
            android:id="@+id/etTripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivTripBckgrndImage"
            android:layout_toRightOf="@id/etTripDate"
            android:text="TripName"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTripDescriptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTripName"
            android:layout_alignLeft="@id/etTripName"
            android:text="TripDescription"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTripStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTripDescriptom"
            android:layout_alignLeft="@id/etTripDescriptom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="20dp"
            android:text="Trip Status"
            android:textSize="10sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTripStatus"
            android:id="@+id/btnTripSave"
            android:text="SAVE"
            />

    </RelativeLayout>
</FrameLayout>
