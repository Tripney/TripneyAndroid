<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="trip"
            type="com.msaranu.tripney.models.Trip" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_top_bar_height"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                <ImageView
                    android:id="@+id/ivTripBckgrndImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:popupTheme="@style/AppTheme.AppBarOverlay" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clipToPadding="false"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp">


                <ImageView
                    android:id="@+id/ivCameraImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_photo_camera" />

                <TextView
                    android:id="@+id/tvTripName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivCameraImage"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/trip_name"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTripName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTripName"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lines="1"
                    android:text='@{trip.mName}'
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etTripName"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/trip_date"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTripDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTripDate"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lines="1"
                    android:text='@{trip.mDate}'
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etTripDate"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/trip_desc"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTripDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTripDescription"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lines="1"
                    android:text='@{trip.mDescription}'
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etTripDescription"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/trip_location"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTripLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTripLocation"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lines="1"
                    android:text='@{trip.mlocation}'
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTripInviteFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etTripLocation"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/trip_add_friends"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ibAddFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTripInviteFriends"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_edit" />

                <LinearLayout
                    android:id="@+id/llButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ibAddFriends"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <Button
                        android:id="@+id/btnTripCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="50"
                        android:background="@color/colorGrey"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/profile_cancel"
                        android:textColor="@color/colorWhite" />

                    <View
                        android:id="@+id/vDivider"
                        android:layout_width="2dp"
                        android:layout_height="60dp" />

                    <Button
                        android:id="@+id/btnTripSave"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="50"
                        android:background="@color/colorTripney"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/profile_save"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>


            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>