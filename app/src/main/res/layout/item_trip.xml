<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="trip" type="com.msaranu.tripney.models.Trip"/>
    </data>

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        tools:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_edge"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        android:layout_marginTop="@dimen/event_list_main_image_padding"
        android:layout_marginStart="@dimen/event_list_main_image_padding"
        android:layout_marginEnd="@dimen/event_list_main_image_padding"
        android:layout_marginBottom="@dimen/event_list_main_image_padding">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTripBckgrndImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/tvTripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTripBckgrndImage"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="March 6 "
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tvTripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTripBckgrndImage"
                android:layout_toRightOf="@id/tvTripDate"
                android:text="TripName"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTripDescriptom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTripName"
                android:layout_alignLeft="@id/tvTripName"
                android:text="TripDescription"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTripStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTripDescriptom"
            android:layout_alignLeft="@id/tvTripDescriptom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="20dp"
            android:text="Trip Status"
            android:textSize="10sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>